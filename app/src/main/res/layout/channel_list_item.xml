<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/channel_icon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp" />

    <ImageView
        android:id="@+id/recommend_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_channel_recommend_label" />

    <TextView
        android:id="@+id/action_btn"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_subscribe_btn"
        android:gravity="center"
        android:text="订阅"
        android:textColor="@color/s3"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/channel_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/action_btn"
        android:layout_toRightOf="@id/channel_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/channel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="222"
            android:textColor="@color/s1"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/channel_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="222"
            android:textColor="@color/s3"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/channel_update_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="222"
            android:textColor="@color/s3"
            android:textSize="11sp" />
    </LinearLayout>

    <View
        android:background="@color/list_item_divider"
        android:layout_marginTop="10dp"
        android:layout_below="@id/channel_text_layout"
        android:layout_alignLeft="@id/channel_icon"
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

</RelativeLayout>